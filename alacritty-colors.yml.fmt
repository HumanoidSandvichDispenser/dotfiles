# vim:ft=yaml

font:
  normal:
    family: Iosevka Sandvich
    family: Iosevka Nerd Font
    style: Regular

  bold:
    family: Iosevka Sandvich
    family: Iosevka Nerd Font
    style: Bold

  italic:
    family: Iosevka Sandvich
    family: Iosevka Nerd Font
    style: Italic

  bold_italic:
    family: Iosevka Sandvich
    family: Iosevka Nerd Font
    style: Bold Italic

  size: 12

window:
  padding:
    x: 8
    y: 8
  dynamic_padding: true

colors:
  # Default colors
  primary:
    background: "{--bg}"
    foreground: "{--fg}"

  # Cursor colors
  cursor:
   text: "{--fg}"
   cursor: "{--fg}"

  # Normal colors
  normal:
    black:   "{--bg}"
    red:     "{--red}"
    green:   "{--green}"
    yellow:  "{--yellow}"
    blue:    "{--blue}"
    magenta: "{--magenta}"
    cyan:    "{--cyan}"
    white:   "{--fg}"

  # Bright colors
  bright:
    black:   "{--gray}"
    red:     "{--red}"
    green:   "{--green}"
    yellow:  "{--yellow}"
    blue:    "{--blue}"
    magenta: "{--magenta}"
    cyan:    "{--cyan}"
    white:   "{--fg}"
